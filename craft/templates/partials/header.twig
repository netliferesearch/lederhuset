<header id="page-header">
  <div class="page-header">
    <div class="grid-wrap">
      <div class="menu__non-nav">
        <div class="menu__non-nav-inner grid-wrap-top vertical-list">

          <div class="menu__login vertical-list__item font-neutral u-1/3">
            <a href="#">Logg inn</a>
          </div>

          <div class="menu__logo-wrap vertical-list__item center u-1/3">
            <a href="/" class="menu__logo">Lederhuset</a>
          </div>

          <div class="vertical-list__item right font-neutral u-1/3">
            <div class="menu__toggle" id="menu__toggle">
              <span class="menu__button-title">Meny</span>
              <div class="menu__button no-flicker">
                <span class="menu__button-bar menu__button-bar--top no-flicker"></span>
                <span class="menu__button-bar menu__button-bar--middle no-flicker"></span>
                <span class="menu__button-bar menu__button-bar--bottom no-flicker"></span>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
  <nav id="menu" class="main-menu">
    <div class="grid-wrap">
      <ul class="main-menu__items">
        <li class="main-menu__item">
          <a href="/">Hjem</a>
        </li>
        {% for entry in craft.entries.section('article').limit(10) %}
          <li class="main-menu__item">
            <a href="{{ entry.url }}">{{ entry.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </nav>
</header>
