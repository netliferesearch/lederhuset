{% set featuredCategories = craft.categories.group('default').order('title') %}

<div class="grid-wrap">
  <!-- Search container -->
  <div class="search pt" data-reveal>
    <div class="search__wrapper pt--small-2 pb--small-2 borders">
      <input class="search__input" type="text" placeholder="Søk på noe" id="mainSearch">
      <button class="search__submit" type="submit">
        <span class="search__icon">
          <span class="circle"></span>
          <span class="handle"></span>
        </span>
      </button>
    </div>
    <button class="search__close" id="searchClose">
      <span class="close__icon"></span>
    </button>
  </div>


  <!-- Search results -->
  <div class="search__results" id="searchResults">
    <ul class="list reset-list"></ul>
  </div>
</div>


<div class="grid-wrap grid-wrap--inline_items">
  <!-- Get categories in featured categories -->
  <div class="mt" id="allEntries">
    <div class="inline-wrapper">
      {% for category in featuredCategories %}
        <div class="u-1/3 inline__item pb--large pr pl" data-reveal>
          {% if category.image|length %}
            <img class="mb--small" src="{{ category.image.first().getUrl('illustration') }}" alt="" />
          {% endif %}
          <h3 class="pb--small">{{ category.title }}</h3>
          <ul class="list reset-list frontpage-list">

            <!-- set entries related to category and count them -->
            {% set relatedEntries = craft.entries.section('article').relatedTo(category) %}
            {% set relatedEntriesCount = relatedEntries.total() %}

            {% for entry in relatedEntries %}
              <li class="list__item list__item--hover list__item--hover-bg frontpage-list__item">
                <a class="font-neutral paragraph pb--xsmall pt--xsmall-optical" href="{{entry.url}}">{{entry.title}}</a>
              </li>
            {% endfor %}

            <!-- add show more button -->
            {% if relatedEntriesCount > 4 %}
              <li class="list__item list__item--hover list__item--hover-bg frontpage-list__item">
                <button class="font-neutral paragraph pb--xsmall pt--xsmall-optical">
                  <span>Vis flere</span>
                  <svg width="20" height="13" viewBox="0 0 124 185">
                  	<path d="M74.4,123.2h49.2l-61.4,61.7l-62-61.7h49.8V0.7h24.4V123.2z"/>
                  </svg>
                </button>
              </li>
            {% endif %}

          </ul>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


<div class="grid-wrap">
  <!-- Templates and resources container (maler og ressurser) -->
  <div class="pt--large mb--large borders--top" id="allEntries">
    {% for entry in craft.entries.section('formsAndTemplates') %}
      <div class="pb--xlarge center-block inline-wrapper">
        <div class="u-1/2 inline__item" data-reveal>
          <h2 class="pb--small">{{ entry.title }}</h2>
          <p class="paragraph font-neutral">
            <a class="underline" href="{{ entry.url }}">Se alle skjema og maler</a>
            utviklet og oppdatert av Virkes eksperter på arbeidsrett.
          </p>
        </div>
        <div class="u-1/2 inline__item pl" data-reveal>
          <img src="{{ entry.image.first().getUrl('illustrationLarge') }}" alt="" />
        </div>
      </div>
    {% endfor %}
  </div>
</div>
